<!DOCTYPE html>
<html>
    <head>
        <meta charset="utf-8">
        <title>JS Learning</title>
        <link rel="stylesheet" type="text/css" href="style.css">
    </head>
    <body>
        <input type="text" placeholder="enter ifsc">
	<button id="getDetails">Click here</button>
	<!--KARB0000001-->
    <script type="text/javascript">
	document.getElementById('getDetails').addEventListener('click', getIfscDetails);

	function getIfscDetails() {
		var input = document.querySelector('input').value;
		var url = 'https://ifsc.razorpay.com/' + input;
		fetch('https://ifsc.razorpay.com/KARB0000001')
	  	.then(function(res){
	  	return res.json();
	  	}).then(function(data){
	  	var ul = document.createElement('ul');
	    	document.body.appendChild(ul);
	    	ul.innerHTML = "IFSC Details";
	  	for(var item in data) {
	    	var li = document.createElement('li');
	      	ul.appendChild(li);
	      	li.innerHTML = data[item];
	    	}
	  	}).catch(function(err){
	  	console.log(err);
	  	});
	}
    </script>   
    </body>
</html>
